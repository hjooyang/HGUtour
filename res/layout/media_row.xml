<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:orientation="vertical"
    android:background="@drawable/back_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"> 
    
         <ImageView android:layout_height="160dip" android:layout_width="160dip" 
            android:id="@+id/thumbnail" android:layout_gravity="center_horizontal"
           ></ImageView>"
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" 
            android:orientation="horizontal" 
            > 
               
                         <TextView 
                            android:layout_height="wrap_content" 
                            android:layout_width="wrap_content" 
                            android:textSize="23sp" 
                            android:id="@+id/text_media_category" 
                            android:textColor="@color/black" 
                            android:layout_marginTop="3dp" 
                            android:layout_marginLeft="5dp" 
                            android:text="mediaCategory"/> 
          
                        <TextView 
                            android:layout_height="wrap_content" 
                            android:layout_width="wrap_content" 
                            android:textSize="30sp" 
                            android:id="@+id/text_media_title" 
                            android:textColor="@color/white" 
                            android:layout_marginTop="3dp" 
                            android:layout_marginLeft="5dp" 
                            android:text="TextView"/> 
                   
            </LinearLayout> 
 </LinearLayout>